<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 【管理员】 -->
<mapper namespace="com.szq.hotel.dao.AdminDAO">
    <!--根据手机号查找管理员信息-->
    <select id="queryAdminInfoByMobile" parameterType="String" resultType="com.szq.hotel.entity.bo.AdminBO">
        SELECT admin.*,role.id AS  roleId  ,role.role_name as roleName
            FROM  lt_admin  admin  LEFT  JOIN  lt_role role  ON  role.id=admin.role_id     WHERE   phone_number =  #{mobile}
    </select>

    <!-- 查询对应的角色对应的权限  -->
    <select id="getRole" parameterType="String" resultMap="roleMap">
        SELECT  rm.`role_id`,rm.`menu_id`,re.`role_name`,re.`id`,mu.`index`,mu.`menu_name`,mu.`pid`,mu.`status`,mu.`url`,mu.`id`,mu.`update_time`,re.create_time createTime,re.update_time updateTime
        FROM
        lt_role_menu  rm
        INNER JOIN   lt_role  re
        ON  re.id=rm.role_id
        INNER JOIN  lt_menu  mu
        ON mu.id=rm.menu_id
        WHERE 1=1
        <if test="_parameter!=null and _parameter!=''">
            and re.role_name like concat(concat('%',#{roleName}),'%')
        </if>
        <!--<include refid="limit" />-->
    </select>

    <!--  查询出所有角色对应的权限  -->
    <resultMap type="com.szq.hotel.entity.bo.RoleBO" id="roleMap">
        <id column="role_id" property="id"/>
        <result column="role_name" property="roleName"/>
        <result column="createTime" property="createTime"/>
        <result column="updateTime" property="updateTime"/>

        <collection property="menuBOS" ofType="com.szq.hotel.entity.bo.MenuBO">
            <id column="menu_id" property="id"/><!-- 这里的column对应的是下面查询的别名，而不是表字段名 -->
            <result column="menu_name" property="menuName"/><!-- property对应JavaBean中的属性名 -->
            <result column="url" property="url"/>
            <result column="index" property="index"/>
            <result column="pid" property="pid"/>
            <collection property="ch"   column="menu_id" select="getCh"/>
        </collection>

        <collection property="lgDTO" column="role_id" select="queryLg" ofType="com.szq.hotel.entity.dto.LgDTO"/>

    </resultMap>

    <sql id="limit">
        limit #{pageOffset},#{pageSize}
    </sql>

    <!--添加管理员信息(管理員注冊)-->
    <insert id="adminRegister" parameterType="com.szq.hotel.entity.bo.AdminBO" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO lt_admin  SET NAME = #{name},
        phone_number = #{phoneNumber},
        gender = #{gender},
        PASSWORD=#{password},
        create_time=#{createTime},
        STATUS=#{status},
        role_id=#{roleId},
        update_time=#{updateTime},
        email=#{email}
    </insert>

    <!-- wy查找角色名是否注册过  -->
    <select id="selectCountByRoleName" parameterType="String" resultType="Integer">
        SELECT count(role_name) FROM lt_role WHERE role_name = #{roleName}
    </select>
    <!-- 查找手机号是否注册过  -->
    <select id="selectCountByMobile" parameterType="String" resultType="int">
        SELECT count(id) FROM lt_admin WHERE phone_number = #{mobile}
    </select>

    <!-- 添加角色信息  -->
    <insert id="addRole" parameterType="com.szq.hotel.entity.bo.RoleBO" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO lt_role  SET role_name = #{roleName},
        create_time=now(),
        update_time=now()
    </insert>

    <!--  wy给角色赋予权限  -->
    <insert id="addRoleMenu"  useGeneratedKeys="true" keyProperty="id">
        INSERT INTO lt_role_menu
        (role_id,menu_id,create_time,update_time)
        values
        <foreach collection="menuIdArr" item="menuId" separator=",">
            (#{roleId},#{menuId},now(),now())
        </foreach>
    </insert>

    <!--  根据角色id删除角色信息  -->
    <delete id="delRoleById" parameterType="Integer">
        DELETE  FROM  lt_role WHERE id=#{roleId}
    </delete>

    <!-- 下拉框展示 查询所有角色  -->
    <select id="getRoleList" resultType="com.szq.hotel.entity.bo.RoleBO">
        SELECT id,role_name FROM lt_role
    </select>

    <!--  wy根据角色id删除对应的权限  -->
    <delete id="delRoleMenuByRoleId" parameterType="Integer">
        DELETE FROM lt_role_menu WHERE role_id=#{roleId}
    </delete>

    <!--  查询admin用户信息  -->
    <select id="getAdmin" parameterType="java.util.Map" resultType="com.szq.hotel.entity.bo.AdminBO">
        SELECT ca.*,ca.phone_number mobile,cr.id,cr.role_name FROM lt_admin ca INNER JOIN lt_role cr ON ca.role_id=cr.id
        where 1=1
        <if test="id!=null and id!=''">
            and ca.id=#{id}
        </if>
        <if test="roleId!=null and roleId!=''">
          and  ca.role_id=#{roleId}
        </if>
        <if test="userName!=null and userName!=''">
           AND ca.name  LIKE '%${userName}%'
        </if>
        <if test="mobile!=null and mobile!=''">
           AND ca.phone_number   LIKE '%${mobile}%'
        </if>
        <if test="email!=null and email!=''">
            AND ca.email=#{email}
        </if>
        <if test="roleName!=null and roleName!=''">
            AND cr.role_name  LIKE '%${roleName}%'
        </if>
        <include refid="limit" />
    </select>

    <!--查询角色下是否存在用户-->
    <select id="checkRoleUser"   parameterType="java.lang.Integer"  resultType="int">
           SELECT count(id) FROM lt_admin  WHERE  role_id =#{roleId}
    </select>
    <!--wy根据角色id修改角色名称  -->
    <select id="updateRoleNameByRoleId">
        UPDATE lt_role SET
        <if test="roleName !=null and roleName!=''">
            role_name=#{roleName},
        </if>
        update_time=now() WHERE id=#{roleId}
    </select>
    <!--wy根据角色名称查询角色信息  -->
    <select id="getRoleByName" resultType="com.szq.hotel.entity.bo.RoleBO" parameterType="String">
        select * from lt_role
        <if test="roleName!=null and roleName!=''">
            where role_name like '%${roleName}%'
        </if>
    </select>
    <!--wy根据角色id查询角色信息  -->
    <select id="getRoleById" resultType="com.szq.hotel.entity.bo.RoleBO" parameterType="Integer">
        select * from lt_role
        <if test="roleId!=null and roleId!=''">
            where id = #{roleId}
        </if>
    </select>
    <!--wy修改admin用户信息  -->
    <update id="updateAdminUser"  parameterType="com.szq.hotel.entity.bo.AdminBO" >
        UPDATE `lt_admin`
        <set>
            <if test="name!=null and name!=''" >`name`=#{name},</if>
            <if test="mobile !=null and mobile!='' ">`mobile`=#{mobile},</if>
            <if test="status!=null and status!=''" > `status`=#{status},</if>
            <if test="roleId!=null and roleId!=''" > `role_id`=#{roleId},</if>
            <if test="password!=null and password!=''" > `password`=#{password}</if>
        </set>
        WHERE id=#{id}
    </update>
    <!--wy根据用户id删除信息  -->
    <delete id="delAdminById">
        DELETE  FROM  lt_admin WHERE
        <foreach  collection="idArr" item="id" separator="OR">
            id=#{id}
        </foreach>
    </delete>
    <!--wy查询角色拥有的权限-->
    <select id="getMenuByRoleId"  resultType="com.szq.hotel.entity.bo.MenuBO"  parameterType="java.lang.Integer">
        SELECT me.* FROM lt_role_menu  rm  INNER JOIN  lt_menu me ON rm.menu_id=me.id  WHERE  rm.role_id=#{roleId}
    </select>
    <!--wy根据 用户id\角色id\用户名 查询用户信息-->
    <select id="getAdminByCond" parameterType="java.util.Map"  resultType="com.szq.hotel.entity.bo.AdminBO">
        select lt_admin.id,`name`,mobile,role_id,role_name
        from lt_admin,lt_role
        where role_id=lt_role.id
        <if test="id!=null and id!=''">
           and lt_admin.id=#{id}
        </if>
        <if test="roleId!=null and roleId!=''">
            and role_id=#{roleId}
        </if>
        <if test="userName!=null and userName!=''">
            and `name` like '%${userName}%'
        </if>
        <include refid="adminLimit" />
    </select>
    <sql id="adminLimit">
        limit #{pageNo},#{pageSize}
    </sql>
    <!--wy根据 用户id\角色id\用户名 查询用户信息总数-->
    <select id="getAdminCountByCond" parameterType="java.util.Map"  resultType="java.lang.Integer">
        select count(*)
        from lt_admin,lt_role
        where role_id=lt_role.id
        <if test="id!=null and id!=''">
            and lt_admin.id=#{id}
        </if>
        <if test="roleId!=null and roleId!=''">
            and role_id=#{roleId}
        </if>
        <if test="userName!=null and userName!=''">
            and `name` like '%${userName}%'
        </if>

    </select>
</mapper>