<?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

        <!-- 【用户】 -->
<mapper namespace="com.szq.hotel.dao.TestDAO">

<update id="updateU1"  >
      UPDATE  hm_test SET  num=num-#{num}  WHERE  id=#{id}
    </update>

    <update id="updateU2"  >
        UPDATE  hm_test SET  num=num+#{num}  WHERE  id=#{id}
    </update>

</mapper>